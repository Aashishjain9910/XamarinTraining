             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="XamTraining.Views.WelcomeToListView">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="bind" Spacing="50">
                <!--<ListView x:Name="testingListView"  ItemSelected="testingListView_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>-->
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame >
                            <StackLayout Orientation="Horizontal" BackgroundColor="#d8dadb"  Margin="0">
                                <Image Source="{Binding WeatherImage}" />
                                <StackLayout Orientation="Vertical" Spacing="0" HorizontalOptions="StartAndExpand" >
                                    <Label Text="{Binding Place}" FontSize="Medium" TextColor="Black"/>
